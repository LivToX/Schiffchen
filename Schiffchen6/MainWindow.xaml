<Window x:Class="Schiffchen6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schiffchen6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500" Background="#FFA6A6A6">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas Name="Sea" Margin="31,30,31,29" Width="430" Height="360" Background="#FF004676"/>
        <Button Content="Add ship" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,5,0,0" Click="Button_Click" IsCancel="True"/>
        <Button Content="Toggle move ships" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Margin="90,5,0,0" Click="Button_Click_1"/>
        <Button Content="Show paths" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="213,5,0,0" Click="Button_Click_2"/>
    </Grid>
</Window>
